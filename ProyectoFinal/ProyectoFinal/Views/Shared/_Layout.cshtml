<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema de Gestión de Citas Médicas</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #e3f2fd 0%, #f1f8e9 100%);
            min-height: 100vh;
        }

        .navbar {
            background: #091C47;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            padding: 1rem 2rem;
        }

        .navbar-content {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-brand {
            font-size: 1.6rem;
            font-weight: bold;
            color: #ffffff;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .navbar-brand:hover {
                color: #e1f5fe;
            }

        .navbar-menu {
            display: flex;
            gap: 2rem;
            list-style: none;
            align-items: center;
        }

            .navbar-menu a {
                color: #ffffff;
                text-decoration: none;
                font-weight: 500;
                transition: all 0.3s;
                padding: 0.5rem 1rem;
                border-radius: 5px;
            }

                .navbar-menu a:hover {
                    background-color: rgba(255,255,255,0.2);
                    color: #e1f5fe;
                }

            .navbar-menu li {
                color: #ffffff;
            }

        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .card {
            background: #ffffff;
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
            border-left: none;
        }

        .btn {
            background: #091C47;
            color: white;
        }
        .btn:hover {
            background: lightgray; 
            color: #091C47;
            transform: translateY(-2px);
        }


        .btn-primary {
            background: #091C47;
            color: white;
            box-shadow: 0 2px 4px rgba(2, 119, 189, 0.3);
        }

            .btn-primary:hover {
                background: lightgray;
                color: #091C47;
                transform: translateY(-2px);
            }

        .btn-danger {
            background: #091C47;
            color: white;
        }

            .btn-danger:hover {
                background: lightgray;
                color: #091C47;
                transform: translateY(-2px);
            }

        .btn-success {
            background: #091C47;
            color: white;
        }

            .btn-success:hover {
                background: lightgray;
                color: #091C47;
                transform: translateY(-2px);
            }

        .alert {
            padding: 1rem 1.5rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .alert-success {
            background-color: #c8e6c9;
            color: #1b5e20;
            border-left: 4px solid #388e3c;
        }

        .alert-error {
            background-color: #ffcdd2;
            color: #b71c1c;
            border-left: 4px solid #d32f2f;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
            background: white;
            border-radius: 8px;
            overflow: hidden;
        }

            table th, table td {
                padding: 1rem;
                text-align: left;
                border-bottom: 1px solid #e0e0e0;
            }

            table th {
                background: #091C47;
                color: white;
                font-weight: 600;
                text-transform: uppercase;
                font-size: 0.85rem;
                letter-spacing: 0.5px;
            }

            table tbody tr:hover {
                background-color: #e3f2fd;
                transition: background-color 0.3s;
            }

        .form-group {
            margin-bottom: 1.5rem;
        }

            .form-group label {
                display: block;
                margin-bottom: 0.5rem;
                font-weight: 600;
                color: #091C47;
            }

            .form-group input,
            .form-group select,
            .form-group textarea {
                width: 100%;
                padding: 0.75rem;
                border: 2px solid #091C47;
                border-radius: 8px;
                font-size: 1rem;
                transition: all 0.3s;
            }

                .form-group input:focus,
                .form-group select:focus,
                .form-group textarea:focus {
                    outline: none;
                    border-color: #091C47;
                }
    </style>
</head>
<body>
    @if (Session["UsuarioID"] != null)
    {
        <nav class="navbar">
            <div class="navbar-content">
                <a href="@Url.Action("Index", Session["Rol"].ToString())" class="navbar-brand">
                    🏥 Sistema de Citas Médicas
                </a>
                <ul class="navbar-menu">
                    <li><strong>@Session["Nombre"]</strong></li>
                    @if (Session["Rol"].ToString() == "Usuario")
                    {
                        <li><a href="@Url.Action("Index", "Usuario")">Inicio</a></li>
                        <li><a href="@Url.Action("ReservarCita", "Usuario")">Reservar Cita</a></li>
                        <li><a href="@Url.Action("MisCitas", "Usuario")">Mis Citas</a></li>
                    }
                    else if (Session["Rol"].ToString() == "Administrador")
                    {
                        <li><a href="@Url.Action("Index", "Admin")">Inicio</a></li>
                        <li><a href="@Url.Action("VerCitas", "Admin")">Citas</a></li>
                        <li><a href="@Url.Action("GestionarServicios", "Admin")">Servicios</a></li>
                        <li><a href="@Url.Action("GestionarHorarios", "Admin")">Horarios</a></li>
                    }
                    <li><a href="@Url.Action("Logout", "Auth")">Salir</a></li>
                </ul>
            </div>
        </nav>
    }

    <div class="container">
        @RenderBody()
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>