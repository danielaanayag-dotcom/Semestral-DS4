@{
    ViewBag.Title = "Dashboard Administrador";
}

<div class="card" style="background: #091C47; color: white; border-left: none;">
    <h1 style="margin-bottom: 0.5rem; font-size: 2rem; display: flex; align-items: center; gap: 0.5rem;">
        Panel de Administración
    </h1>
    <p style="font-size: 1.1rem; opacity: 0.95;">Bienvenido, <strong>@ViewBag.Nombre</strong></p>
</div>

<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem;">
    <div class="card" style="text-align: center; border-left: none; transition: transform 0.3s; cursor: pointer;" onmouseover="this.style.transform='translateY(-8px)'" onmouseout="this.style.transform='translateY(0)'">
        <div style="font-size: 4rem; margin-bottom: 1rem; background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%); width: 100px; height: 100px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem;">
            📋
        </div>
        <h3 style="margin-bottom: 1rem; color: #091C47; font-size: 1.4rem;">Ver Citas</h3>
        <p style="color: #546e7a; margin-bottom: 2rem; line-height: 1.6;">Consulta todas las citas programadas en el sistema</p>
        <a href="@Url.Action("VerCitas", "Admin")" class="btn btn-primary" style="display: inline-block;">
            Ver Todas
        </a>
    </div>

    <div class="card" style="text-align: center; border-left: none; transition: transform 0.3s; cursor: pointer;" onmouseover="this.style.transform='translateY(-8px)'" onmouseout="this.style.transform='translateY(0)'">
        <div style="font-size: 4rem; margin-bottom: 1rem; background: linear-gradient(135deg, #c8e6c9 0%, #a5d6a7 100%); width: 100px; height: 100px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem;">
            🏥
        </div>
        <h3 style="margin-bottom: 1rem; color: #091C47; font-size: 1.4rem;">Gestionar Servicios</h3>
        <p style="color: #546e7a; margin-bottom: 2rem; line-height: 1.6;">Administra los servicios médicos disponibles</p>
        <a href="@Url.Action("GestionarServicios", "Admin")" class="btn btn-success" style="display: inline-block;">
            Gestionar
        </a>
    </div>

    <div class="card" style="text-align: center; border-left:none; transition: transform 0.3s; cursor: pointer;" onmouseover="this.style.transform='translateY(-8px)'" onmouseout="this.style.transform='translateY(0)'">
        <div style="font-size: 4rem; margin-bottom: 1rem; background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%); width: 100px; height: 100px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem;">
            🕐
        </div>
        <h3 style="margin-bottom: 1rem; color: #091C47; font-size: 1.4rem;">Gestionar Horarios</h3>
        <p style="color: #546e7a; margin-bottom: 2rem; line-height: 1.6;">Administra los horarios disponibles para citas</p>
        <a href="@Url.Action("GestionarHorarios", "Admin")" class="btn" style="display: inline-block; background: #091C47; color:white">
             Gestionar
        </a>
    </div>
</div>

